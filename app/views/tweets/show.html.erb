<div class="tweet spacer">
  <strong>
    <i><h3>@<%= @tweet.user.username %></h3></i>
  </strong>
  <div class="time">
    [<%= @tweet.created_at.strftime("%b-%d-%y%t%I:%M %p") %>]
  </div>
  <p><%= @tweet.body %></p>
</div>

<%= link_to "Back", tweets_path, class: "btn btn-sm btn-secondary spacer" %>

<%= form_with model: [@tweet, @comment] do |f| %>
  <%= f.text_field :body, required: true, placeholder: "Add a Comment", class: "form-control spacer" %>
  <%= f.submit "Comment" ,class: "btn btn-sm btn-primary spacer"%>
<% end %>
